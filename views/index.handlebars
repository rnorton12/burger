<h1>Eat a Burger</h1>

<div class="row">
  <div class="col-md-4">
    <h2>Burgers not Devoured!</h2>
  <ol>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
      {{/unless}}
    {{/each}}
  </ol>
</div>
<div class="col-md-4">
  <img src="/assets/img/burger.gif" class="img-fluid ml-4" alt="Burger Gif" width="50px" height="50px"/>
<form class="create-form">

  <div class="form-group">
    <label for="bg">Burger Name:</label>
    <input type="text" id="bg" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>

</div>
<div class="col-md-4">
<h2>Burgers Devoured!</h2>

<ol>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ol>
</div>




